<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/uploading_list_cell_im_width"
        android:layout_height="@dimen/uploading_list_cell_im_height"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:id="@+id/uploading_videos_list_cell_iv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/uploading_list_cell_im_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/uploading_list_cell_tv_size"
        android:text="Video Id:"
        android:id="@+id/uploading_videos_list_cell_tv_vid"
        android:layout_toRightOf="@id/uploading_videos_list_cell_iv"
        android:layout_alignTop="@id/uploading_videos_list_cell_iv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/uploading_list_cell_tv_size"
        android:id="@+id/uploading_videos_list_cell_tv_vidt"
        android:layout_toRightOf="@id/uploading_videos_list_cell_iv"
        android:layout_below="@id/uploading_videos_list_cell_tv_vid"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/uploading_list_cell_tv_size"
        android:text="State: Uploading"
        android:id="@+id/uploading_videos_list_cell_tv_state"
        android:layout_below="@id/uploading_videos_list_cell_tv_vidt"
        android:layout_toRightOf="@id/uploading_videos_list_cell_iv"
        />


</RelativeLayout>
